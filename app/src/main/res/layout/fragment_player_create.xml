<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.player.PlayerCreateFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/viewPlayerCreate"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_header_height"
            android:background="@color/design_default_color_secondary_variant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarPlayerCreate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_secondary_variant"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/viewPlayerCreate"
            app:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/imageViewAvatarPlayerCreate"
            android:layout_width="@dimen/main_avatar_size"
            android:layout_height="@dimen/main_avatar_size"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="@+id/viewPlayerCreate"
            app:layout_constraintEnd_toEndOf="@+id/viewPlayerCreate"
            app:layout_constraintStart_toStartOf="@+id/viewPlayerCreate"
            app:layout_constraintTop_toTopOf="@id/viewPlayerCreate"
            app:layout_constraintVertical_bias="0.395" />

        <EditText
            android:id="@+id/editTextAvatarPlayerCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_selection_no_player_selected"
            android:textColor="@color/white"
            android:textSize="@dimen/main_textSize_5x"
            app:layout_constraintBottom_toBottomOf="@+id/viewPlayerCreate"
            app:layout_constraintEnd_toEndOf="@id/viewPlayerCreate"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@id/viewPlayerCreate"
            app:layout_constraintTop_toBottomOf="@+id/imageViewAvatarPlayerCreate" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lstAvatarCreate"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewPlayerCreate"
            tools:listitem="@layout/avatar_item"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCreatePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/main_margin_2x"
        android:layout_marginBottom="@dimen/main_margin_2x"
        android:backgroundTint="@color/accent"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_player_add_black_48dp" />
</FrameLayout>