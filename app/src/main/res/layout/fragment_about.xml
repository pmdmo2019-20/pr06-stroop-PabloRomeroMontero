<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.about.AboutFragment">

    <View
        android:id="@+id/viewAbout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_header_height"
        android:background="@color/design_default_color_secondary_variant"
        app:layout_constraintBottom_toTopOf="@id/TextViewAbout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAbout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_secondary_variant"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="@id/viewAbout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewAbout"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/TextViewAbout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/main_margin_3x"
        android:textSize="@dimen/main_textSize_3x"
        android:text="@string/about_lblDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewAbout" />

    <ImageView
        android:id="@+id/imageViewLogoAbout"
        android:layout_width="@dimen/main_avatar_size"
        android:layout_height="@dimen/main_avatar_size"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@+id/viewAbout"
        app:layout_constraintEnd_toEndOf="@+id/viewAbout"
        app:layout_constraintStart_toStartOf="@+id/viewAbout"
        app:layout_constraintTop_toTopOf="@id/viewAbout"
        app:layout_constraintVertical_bias="0.395" />

    <TextView
        android:id="@+id/textViewAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/main_textSize_5x"
        android:textColor="@color/white"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/viewAbout"
        app:layout_constraintEnd_toEndOf="@id/viewAbout"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@id/viewAbout"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogoAbout" />


</androidx.constraintlayout.widget.ConstraintLayout>